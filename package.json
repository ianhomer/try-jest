{
  "scripts": {
    "eslint": "eslint src --ext .ts",
    "eslint:fix": "eslint src --ext .ts --fix",
    "lint": "pnpm run prettier && pnpm run eslint",
    "lint:fix": "pnpm run package:fix && pnpm run prettier:fix && pnpm run eslint:fix",
    "package:fix": "format-package -w",
    "pre-commit": "lint-staged --quiet && pnpm test",
    "pre-push": "pnpm run lint",
    "prepare": "husky install",
    "prettier": "pnpx prettier --check .",
    "prettier:fix": "pnpx prettier --write .",
    "test": "jest --collectCoverage",
    "test:watch": "jest --watch --onlyChanged --collectCoverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --quiet && pnpm test",
      "pre-push": "pnpm run lint"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "dependencies": {
    "typescript": "^4.4.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^5.36.2",
    "babel-jest": "^27.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "format-package": "^6.1.0",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2"
  }
}
